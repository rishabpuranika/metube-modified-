    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: MeTube",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "windows": {
                "env": {
                    "DOWNLOAD_DIR": "${env:USERPROFILE}/Downloads",
                    "STATE_DIR": "${env:TEMP}",
                }
            },
            "osx": {
                "env": {
                    "DOWNLOAD_DIR": "${env:HOME}/Downloads",
                    "STATE_DIR": "${env:TMPDIR}",
                }
            },
            "console": "integratedTerminal"
        }
    ]
}